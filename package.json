{
  "private": true,
  "homepage": "https://sitnik.ru/",
  "license": "MIT",
  "scripts": {
    "spell": "yaspeller *.md dist/**/*.html",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "yarn lint & yarn build && size-limit && yarn spell",
    "clean": "rm -Rf dist/ .cache src/globe/location.json",
    "start": "parcel serve src/index.pug --open",
    "build": "NODE_ENV=production ./scripts/build.js"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "autoprefixer": "^9.8.6",
    "del": "^6.0.0",
    "dotenv": "^8.2.0",
    "parcel-bundler": "^1.12.5",
    "postcss": "^7.0.32",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.2.3",
    "postcss-pxtorem": "^5.1.1",
    "posthtml": "^0.15.2",
    "pug": "^3.0.2",
    "rollup": "^2.47.0",
    "rollup-plugin-terser": "^7.0.2",
    "ssdeploy": "^0.6.19",
    "strip-debug": "^4.0.0",
    "sugarss": "^2.0.0",
    "three": "^0.128.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.1",
    "@logux/sharec-config": "^0.10.2",
    "@logux/stylelint-config": "^0.3.1",
    "@size-limit/file": "^4.10.2",
    "colorette": "^1.2.2",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "fast-xml-parser": "^3.19.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.4.1",
    "size-limit": "^4.10.2",
    "stylelint": "^13.13.1",
    "typescript": "^4.2.4",
    "yaspeller": "^7.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html",
          ".photo"
        ],
        "rootValue": 20
      },
      "autoprefixer": {}
    }
  },
  "engines": {
    "node": ">=13.2.0"
  },
  "browser": {
    "node_modules/three/src/renderers/webvr/*": "./src/empty.js"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-non-literal-regexp": "off",
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "node/global-require": "off",
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "dist",
    ".cache",
    "**/errors.ts"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Critical",
      "path": "dist/en/index.html",
      "limit": "4 KB"
    },
    {
      "name": "Full",
      "path": [
        "dist/worker.*.js",
        "dist/map.*.webp",
        "dist/here.*.webp",
        "dist/photo.*.webp"
      ],
      "limit": "180 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "GPG",
      "63BC",
      "24D9",
      "8C77",
      "F786",
      "WhatsApp",
      "WeChat",
      "NSFW",
      "GitHub",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "Instagram",
      "Linguopunk",
      "ru",
      "sitnik",
      "Телеграм",
      "ВКонтакте",
      "Твиттер",
      "Гитхаб",
      "Автопрефиксер",
      "Браузерслист",
      "фронтенд",
      "Инстаграм",
      "Лингвопанк",
      "Logux",
      "Логакс",
      "sitnikfriday",
      "Ситникфрайдей"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.10.2"
  }
}
