doctype html
html( lang="ru" itemtype="https://schema.org/Person" itemscope )
  head
    meta( charset="UTF-8" )
    title Андрей Ситник
    meta( name="description" content="Контакты и проекты Андрея Ситника" )
    include ../base/head.pug
  body
    .layout
      .layout_globe

        a.photo( href="../photo/andreysitnik.jpg" target="_blank" )
          picture.photo_image
            source( srcset="../photo/photo.avif" type="image/avif" )
            img.photo_image( src="../photo/photo.jpg" alt="Фотография Андрея Ситника" itemprop="image" )

        h1.layout_title
          span( itemprop="givenName" ) Андрей
          = ' '
          span( itemprop="familyName" ) Ситник

        .globe
          .earth( data-lat=location.latitude data-lng=location.longitude )
            .earth_loading
            canvas.earth_canvas

          .globe_visited
            = visited.countries.length
            = ' '
            = pluralize(visited.countries.length, 'страна посещена', 'стран посещены', 'страны посещены')

          button.globe_location( type="button" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress" tabindex="-1" )
            span( itemprop="addressLocality" )= location.ru.city
            = ', '
            span( itemprop="addressCountry" )= location.ru.country

      .layout_links

        .contacts
          .contacts_contact
            a.link( href="mailto:andrey@sitnik.ru" itemprop="email" )
              | andrey@sitnik.ru
            .contacts_notes
              a.link( href="https://keybase.io/iskin" itemprop="sameAs" rel="me" title="Публичный ключ GnuPG, чтобы проверить мою подпись или отправить мне шифрованное сообщение" )
                | PGP 7F57 C4D6 F26F F656
          .contacts_contact
            a.link.is-text( href="tel:+34613026399" itemprop="telephone" )
              | +34 613 026 399
            .contacts_notes.is-right
              link( href="https://wa.me/19143123913" itemprop="sameAs" rel="me" )


              link( href="weixin://dl/chat?andrey_sitnik" itemprop="sameAs" rel="me" )


              a.link( href="https://t.me/sitnik" itemprop="sameAs" rel="me" )
                | Телеграм

        link( href="https://twitter.com/andreysitnik" itemprop="sameAs" rel="me" )
        link( href="https://twitter.com/sitnikcode" itemprop="sameAs" rel="me" )
        ul.projects
          li.projects_item
