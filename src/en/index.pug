doctype html
html( lang="en" itemtype="https://schema.org/Person" itemscope )
  head
    meta( charset="UTF-8" )
    title Andrey Sitnik
    meta( name="description" content="Contacts and projects of Andrey Sitnik" )
    include ../base/head.pug
  body
    .layout
      .layout_globe

        a.photo( href="../photo/andreysitnik.jpg" target="_blank" )
          picture.photo_image
            source( srcset="../photo/photo.avif" type="image/avif" )
            img.photo_image( src="../photo/photo.jpg" alt="Andrey Sitnik photo" itemprop="image" )

        h1.layout_title
          span( itemprop="givenName" ) Andrey
          = ' '
          span( itemprop="familyName" ) Sitnik

        .globe
          .earth( data-lat=location.latitude data-lng=location.longitude )
            .earth_loading
            canvas.earth_canvas

          .globe_visited
            = visited.countries.length
            = ' '
            = pluralize(visited.countries.length, 'country', 'countries')
            = ' visited'

          button.globe_location( type="button" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress" tabindex="-1" )
            span( itemprop="addressLocality" )= location.en.city
            = ', '
            span( itemprop="addressCountry" )= location.en.country

      .layout_links

        .contacts
          .contacts_item
            a.link( href="mailto:andrey@sitnik.ru" itemprop="email" )
              | andrey@sitnik.ru
            .contacts_notes
              a.link( href="https://keybase.io/iskin" itemprop="sameAs" rel="me" title="Public key for GnuPG to verify my signature or encrypt message for me" )
                | PGP 72B8 B601 A95D BB45
          .contacts_item
            a.link.is-text( href="tel:+34613026399" itemprop="telephone" )
              | +34 613 026 399
            .contacts_notes
              a.link( href="https://wa.me/19143123913" itemprop="sameAs" rel="me" )
                | WhatsApp
              = ' '
