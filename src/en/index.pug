                | Telegram

        link( href="https://bsky.app/profile/sitnik.bsky.social" itemprop="sameAs" rel="me" )
        link( href="https://twitter.com/andrey_sitnik" itemprop="sameAs" rel="me" )
        link( href="https://vk.com/iskin" itemprop="sameAs" rel="me" )
        link( href="https://mastodon.social/@sitnik_ru" itemprop="sameAs" rel="me" )
        link( href="https://mastodon.social/@sitnik" itemprop="sameAs" rel="me" )
